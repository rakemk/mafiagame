# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/neonmafia

# JWT secret used to sign tokens (keep secret in production)
JWT_SECRET=replace_with_a_strong_secret

# App base URL (used to build Google redirect URI)
BASE_URL=http://localhost:4000
# Public frontend URL (where verify page lives)
FRONTEND_URL=http://localhost:3000
# Backend URL (where this server runs)
BACKEND_URL=http://localhost:4000

# Email verification token expiry (e.g. 15m)
EMAIL_EXPIRES_IN=15m

# Google OAuth credentials (create these in Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# (Optional) Supabase service role key â€” required if you want the auth-server to exchange
# Supabase OAuth codes server-side. Keep this secret; do NOT commit to public repos.
#SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cookie settings
COOKIE_NAME=token
COOKIE_MAX_AGE=604800000 # 7 days in ms

# Optional SMTP settings for sending emails. If omitted, verification link will be logged.
#SMTP_HOST=smtp.example.com
#SMTP_PORT=587
#SMTP_SECURE=false
#SMTP_USER=username
#SMTP_PASS=password
#SMTP_FROM="Neon Mafia <no-reply@example.com>"

# If you want the backend to handle the verify click (instead of redirecting to frontend), set:
#VERIFY_USING_BACKEND=true
